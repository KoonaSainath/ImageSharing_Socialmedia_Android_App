<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewPostsSentToUserActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:text="Select a username to view the post sent to you"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_sent_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/purple_500"
        android:layout_margin="16dp"
        android:text="Sent by: " />

    <TextView
        android:id="@+id/txt_desc_of_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:text="About post:\n\n"
         />

    <ImageView
        android:id="@+id/txt_image_of_post"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/dialog_frame" />

    <ListView
        android:id="@+id/list_of_sent_posts"
        android:layout_margin="16dp"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>