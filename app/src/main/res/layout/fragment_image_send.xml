<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ImageSendFragment">

    <TextView
        android:id="@+id/txt_welcome_user"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/txt_guide"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select an image and send to another user. HAVE FUN:)" />

    <ImageView
        android:id="@+id/img_selected_image"
        android:layout_width="200dp"
        android:scaleType="centerInside"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:src="@drawable/select_image" />

    <EditText
        android:id="@+id/edt_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:padding="16dp"
        android:hint="Description of post"
        android:textColorHint="@color/white"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:gravity="center"
        android:inputType="textCapSentences"/>

    <TextView
        android:id="@+id/txt_title_for_user_list"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send the post to any of the users below:" />

    <ListView
        android:id="@+id/list_all_users"
        android:layout_margin="8dp"
        android:visibility="invisible"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>